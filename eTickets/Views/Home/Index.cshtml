@{
    ViewData["Title"] = "Home Page";
}

<section>
    <!-- Background image -->
    <div class="bg-image">
        <img src="~/images/Homepage background.jpg" height="500px" width="100%" />
    </div>
    <!-- Background image -->
</section>
